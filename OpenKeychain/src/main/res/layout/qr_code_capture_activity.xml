<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.journeyapps.barcodescanner.CompoundBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/private_key_import_button_margin_bottom">

        <Button
            android:id="@+id/private_key_import_help_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_help"
            android:padding="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/private_key_import_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_key_import_button"
            android:padding="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>