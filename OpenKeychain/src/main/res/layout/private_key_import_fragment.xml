<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/private_key_import_ip_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_key_import_ip_address"
            android:paddingBottom="72dp"
            android:textSize="@dimen/private_key_import_export_text_headline_size"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/private_key_import_ip_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/private_key_import_ip_hint"
            android:paddingBottom="32dp"/>

        <EditText
            android:id="@+id/private_key_import_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/private_key_import_port_hint"
            android:inputType="numberSigned"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/private_key_import_sentence_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_key_import_export_phrase_headline"
            android:paddingBottom="72dp"
            android:textSize="@dimen/private_key_import_export_text_headline_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/private_key_import_sentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/private_key_import_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/msg_vl_ok"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"
        android:layout_marginBottom="72dp"
        android:enabled="false"/>

    <LinearLayout
        android:id="@+id/private_key_import_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <Button
            android:id="@+id/private_key_import_sentence_not_matched_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_no"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/private_key_import_button_margin_bottom"/>

        <Button
            android:id="@+id/private_key_import_sentence_matched_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_yes"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:layout_marginBottom="@dimen/private_key_import_button_margin_bottom"/>

    </LinearLayout>

</LinearLayout>